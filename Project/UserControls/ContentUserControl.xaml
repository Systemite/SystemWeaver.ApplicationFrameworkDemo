<UserControl x:Class="SystemWeaver.ApplicationFrameworkDemo.UserControls.ContentUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/Systemite.SystemWeaver.Controls;component/UserControls/Resources/ResourceDictionary.xaml" />
	</UserControl.Resources>
	<StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock Text="Put your content here" Style="{StaticResource ResourceKey=HeaderTextStyle}" />
		<TextBlock Margin="0,20,0,0" Name="userTextBlock" Style="{StaticResource ResourceKey=BodyTextStyle}" />
		<TextBlock Margin="0,5,0,0" Name="lastLoginTextBlock" Style="{StaticResource ResourceKey=BodyTextStyle}" />
	</StackPanel>
</UserControl>
